{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./backend/dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/config/**/*.ts",
    "src/middleware/**/*.ts", 
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/langGraph/**/*.ts",
    "src/index.ts",
    "src/test-server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
